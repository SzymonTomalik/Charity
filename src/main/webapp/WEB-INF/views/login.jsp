<%@ page contentType="text/html;charset=UTF-8" language="java" %><%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %><%@ taglib prefix="spring" uri="http://www.springframework.org/tags" %><%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt" %><%@ taglib prefix="form" uri="http://www.springframework.org/tags/form" %><!DOCTYPE html><html lang="pl"><%@include file="/WEB-INF/head.jspf" %><body><%@include file="/WEB-INF/header.jspf" %><section class="login-page">    <sec:authorize access="isAuthenticated()">        <h2>Czy chcesz się wylogować?</h2>        <form action="/logout" method="post">            <div class="form-group form-group--buttons">                <button class="btn" type="submit">Wyloguj się</button>                <input type="hidden" name="${_csrf.parameterName}" value="${_csrf.token}"/>            </div>        </form>    </sec:authorize>    <sec:authorize access="!isAuthenticated()">        <h2>Zaloguj się</h2>        <form action="/login" method="post">            <div class="form-group">                <label>                    <input type="email" name="email" placeholder="Email"/>                </label>            </div>            <div class="form-group">                <label>                    <input type="password" name="password" placeholder="Hasło"/>                </label>                <a href="#" class="btn btn--small btn--without-border reset-password">Przypomnij hasło</a>            </div>            <div class="form-group form-group--buttons">                <a href="/user/form" class="btn btn--without-border">Załóż konto</a>                <button class="btn" type="submit">Zaloguj się</button>                <input type="hidden" name="${_csrf.parameterName}" value="${_csrf.token}"/>            </div>        </form>    </sec:authorize></section><%@include file="/WEB-INF/footer.jspf" %></body></html>